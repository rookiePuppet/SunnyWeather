<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.forum.PostEditActivity">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/postEditToolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?attr/colorPrimary"
      android:minHeight="?attr/actionBarSize"
      android:theme="?attr/actionBarTheme"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:titleTextColor="#fff" />

  <EditText
      android:id="@+id/postTitleText"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="输入标题"
      android:inputType="textPersonName"
      android:maxLines="3"
      android:minHeight="48dp"
      android:paddingStart="5dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/postEditToolbar" />

  <EditText
      android:id="@+id/postContentText"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:gravity="start"
      android:hint="输入内容"
      android:inputType="textPersonName"
      android:maxLines="10"
      android:paddingStart="5dp"
      app:layout_constraintBottom_toTopOf="@+id/guideline20"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/postTitleText" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline20"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.5" />

  <Button
      android:id="@+id/publishBtn"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="发布"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/guideline20" />

</androidx.constraintlayout.widget.ConstraintLayout>